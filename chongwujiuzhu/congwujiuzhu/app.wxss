page {
  background: linear-gradient(135deg, #fff9e6 0%, #ffe6f0 100%);
  font-family: 'Comic Sans MS', 'PingFang SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  margin: 0;
  padding: 0;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #fff9e6 0%, #ffe6f0 100%);
}

.header {
  padding: 12px 16px;
  background: linear-gradient(90deg, #ff6b9d 0%, #c44569 100%);
  border-bottom: 3px dashed #ffb6c1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4px 12px rgba(255, 107, 157, 0.3);
}

.header-title {
  display: flex;
  align-items: center;
  gap: 8px;
}

.header-icon {
  font-size: 24px;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4px); }
}

.header-text {
  font-size: 20px;
  font-weight: bold;
  color: white;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
}

.header-buttons {
  display: flex;
  gap: 12px;
}

.btn-icon {
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #ffb6c1 0%, #ffc0cb 100%);
  border: 2px solid white;
  border-radius: 50%;
  font-size: 20px;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  transition: all 0.2s;
}

.btn-icon:active {
  transform: scale(0.95);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

.content {
  flex: 1;
  position: relative;
  overflow: hidden;
  width: 100%;
}

.fab {
  position: fixed;
  bottom: 24px;
  right: 24px;
  width: 64px;
  height: 64px;
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  border: 3px solid white;
  border-radius: 50%;
  color: white;
  font-size: 32px;
  padding: 0;
  box-shadow: 0 6px 20px rgba(255, 107, 157, 0.4);
  z-index: 100;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 3px 10px rgba(255, 107, 157, 0.3);
}

/* Âç°ÈÄöÊ†áÁ≠æ */
.tag {
  display: inline-block;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: bold;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.tag-rescue {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff4757 100%);
  color: white;
  border: 2px solid #fff;
}

.tag-rescued {
  background: linear-gradient(135deg, #26de81 0%, #20c997 100%);
  color: white;
  border: 2px solid #fff;
}

/* Âä†ËΩΩÂä®Áîª */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #ff6b9d;
  font-size: 16px;
}

.loading-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid #ffb6c1;
  border-top-color: #ff6b9d;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 8px;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* ÈîôËØØÊèêÁ§∫ */
.error-toast {
  position: fixed;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(90deg, #ff6b9d 0%, #c44569 100%);
  color: white;
  padding: 12px 20px;
  border-radius: 20px;
  z-index: 300;
  backdrop-filter: blur(4px);
  pointer-events: none;
  margin-top: 10px;
  box-shadow: 0 4px 12px rgba(255, 107, 157, 0.3);
  font-weight: bold;
}
